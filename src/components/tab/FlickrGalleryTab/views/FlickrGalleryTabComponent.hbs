<section class="tabsbox__tab flickr-tab">
    <h2 class="flickr-tab__title">Flickr Gallery</h2>

    <div class="flickr-tab__gallery">
        <ul class="photos-list js-photos-list">
            {{#each photos as |photo|}}
                <li class="photos-list__item">
                    <img class="photos-list__photo" src="{{photo.original}}" alt="Photo from Flickr">
                </li>
            {{/each}}
        </ul>

        <a href="" class="flickr-tab__btn-load-more js-load-more">Load more</a>
    </div>
</section>
